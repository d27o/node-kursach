<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Фамилия</th>
            </tr>
        </thead>
        <tbody>
            {{#each responsiblePeople}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.patronymicName}}</td>
                <td>{{this.lastName}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>