        <button onclick="remove(2)">Delete</button>



    </div>
</div>
<script>
    function remove(id) {
        fetch("/api/responsiblePeople/" + id, {
            method: 'DELETE'
        }).then(() => {
            console.log('removed');
        }).catch(err => {
            console.error(err)
        });
    }

    function update(id, formName) {
        let form = formName
        let myData = {
            name: form.elements.name.value,
            patronymicName: form.elements.patronymicName.value,
            lastName: form.elements.lastName.value,
            PositionId: form.elements.PositionId.value
        }
        let data = JSON.stringify(myData)
        fetch("/api/responsiblePeople/" + id, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json;charset=utf-8'
            },
            body: data
        }).then(() => {
            location.reload()
        }).catch(err => {
            console.error(err)
        });
    }
</script>