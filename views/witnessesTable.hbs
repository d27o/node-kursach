<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Фамилия</th>
                <th>Серия и номер паспорта</th>
            </tr>
        </thead>
        <tbody>
            {{#each witnesses}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.patronymic}}</td>
                <td>{{this.surname}}</td>
                <td>{{this.serialNumber}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>